{
  "project": {
    "name": "3D Keychain Designer",
    "version": "1.0.0",
    "target_audience": ["Women", "Kids", "Gift shoppers"],
    "tech_stack": {
      "frontend": {
        "framework": "React with Vite",
        "styling": "Tailwind CSS",
        "3d_library": "Three.js (@react-three/fiber, @react-three/drei)",
        "ui_components": "shadcn/ui",
        "routing": "React Router DOM",
        "language": "TypeScript"
      },
      "backend": {
        "current": "None (Frontend only)",
        "planned": "Supabase (authentication, database, storage)"
      }
    }
  },
  
  "design_system": {
    "colors": {
      "primary": {
        "name": "Coral Pink",
        "hsl": "350 65% 65%",
        "usage": "Main brand color, CTAs, important elements"
      },
      "secondary": {
        "name": "Lavender",
        "hsl": "270 50% 75%",
        "usage": "Supporting elements, secondary actions"
      },
      "tertiary": {
        "name": "Mint Green",
        "hsl": "160 45% 70%",
        "usage": "Success states, accents"
      },
      "accent": {
        "name": "Sunshine Yellow",
        "hsl": "45 90% 70%",
        "usage": "Highlights, badges, special features"
      },
      "background": {
        "name": "Soft Pastel",
        "hsl": "30 40% 99%",
        "usage": "Main background color"
      }
    },
    
    "typography": {
      "display_font": "Quicksand",
      "body_font": "Inter",
      "characteristics": "Rounded, friendly, playful"
    },
    
    "gradients": {
      "primary": "linear-gradient(135deg, Coral Pink, Lavender)",
      "secondary": "linear-gradient(135deg, Mint Green, Sunshine Yellow)",
      "aurora": "45deg multi-color pastel gradient",
      "soft": "180deg subtle pastel blend"
    },
    
    "animations": {
      "float": "3s ease-in-out infinite vertical movement",
      "bounce-gentle": "2s ease-in-out infinite scale and translate",
      "shimmer": "3s linear infinite background position",
      "fade-up": "0.5s ease-out opacity and translate"
    },
    
    "ui_principles": [
      "Rounded corners (1rem radius)",
      "Soft shadows with color tints",
      "Playful hover effects",
      "Smooth transitions",
      "Child-friendly interface",
      "Large touch targets"
    ]
  },
  
