  "project_rules": {
    "code_standards": [
      "Use TypeScript for type safety",
      "Component-based architecture",
      "Semantic HTML elements",
      "Design system tokens only (no hardcoded colors)",
      "All colors must be HSL format",
      "Responsive design mandatory",
      "Accessibility considerations"
    ],
    
    "file_structure": {
      "components": "Reusable UI components in src/components/",
      "pages": "Route pages in src/pages/",
      "assets": "Images and static files in src/assets/",
      "ui_components": "shadcn components in src/components/ui/",
      "hooks": "Custom hooks in src/hooks/"
    },
    
    "styling_rules": [
      "Always use design system tokens",
      "Never use direct colors (text-white, bg-black, etc.)",
      "Customize shadcn components with variants",
      "Maintain consistency across all components",
      "Mobile-first responsive approach"
    ]
  },
  
